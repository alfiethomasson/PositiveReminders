<Window x:Class="PositiveReminder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PositiveReminder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,39,0,0" Text="Positive Reminders" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="1.673,-3.035" FontSize="30"/>
        <RadioButton x:Name="EnableButton" Content="Enable App" HorizontalAlignment="Left" Margin="336,0,0,0" VerticalAlignment="Center" Checked="RadioButton_Checked" RenderTransformOrigin="0.5,0.5" IsChecked="True">
            <RadioButton.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="2" ScaleY="2"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </RadioButton.RenderTransform>
        </RadioButton>
        <Button Content="Display" HorizontalAlignment="Left" Margin="335,319,0,0" VerticalAlignment="Top" FontSize="30" Click="Button_Click"/>

    </Grid>
</Window>
